<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cap_book_form_view" model="ir.ui.view">
        <field name="name">cap.book.form.view</field>
        <field name="model">cap.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="genre_ids" widget="many2many_tags" />
                    </group>
                    <group>
                        <field name="create_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cap_book_tree_view" model="ir.ui.view">
        <field name="name">cap.book.tree.view</field>
        <field name="model">cap.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="name"/>
                <field name="genre_ids" widget="many2many_tags" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="cap_book_form_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">cap.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="cap_book_root_menu"
        name="Books"
        action="cap_book_form_action"
        sequence="10"/>

</odoo>
